# This is Git's per-user configuration file.
[user]
	name = Khongor Bayarsaikhan
	email = b.khongi@gmail.com

[includeIf "gitdir:*/*[pP]ersonal/"]
	path = .gitconfig-personal

[includeIf "gitdir:*/*[eE][dD][uU]/"]
	path = .gitconfig-personal

[includeIf "gitdir:*/*[aA]ut[sS]oft/"]
    path = .gitconfig-autsoft

[includeIf "gitdir:*/*[dD][oO][dD]/"]
	path = .gitconfig-dod

[merge]
	tool = vimdiff
[push]
	default = simple
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[core]
	pager = LESSCHARSET=utf-8 less -R
	longpaths = true
	editor = vim
	filemode = false
[difftool "sourcetree"]
	cmd = 'meld' $LOCAL $REMOTE
[alias]
	co = checkout
	st = status
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	s = status -s
	so = remote show origin
	rso = remote
	last = log -1 HEAD
	ctemp = commit -a -m temp
	f = fetch
	ca = commit -a
	c = commit
[mergetool "sourcetree"]
	cmd = 'meld' $LOCAL $MERGED $REMOTE
	trustExitCode = true
[color]
	ui = true
[gpg]
	program = gpg
[commit]
	gpgSign = false
[tag]
	forceSignAnnotated = false
