#====== Oh My Zsh
export ZSH=$HOME/.oh-my-zsh

# Source common config
source $ZDOTDIR/.zshcommon

# Override common config

ZSH_THEME="af-magic"

#PROMPT="${ret_status} %{$fg[cyan]%}%c%{$reset_color%} $(git_prompt_info) %#"
#PROMPT='%(!.%{%F{yellow}%}.)$USER @ %{$fg[white]%}%M %{$fg_bold[red]%}âžœ %{$fg_bold[green]%}%p %{$fg[cyan]%}%c %{$fg_bold[blue]%}$(git_prompt_info)%{$fg_bold[blue]%} % %{$reset_color%}'
RPROMPT='%t'

plugins=(
  git
  vi-mode
  zsh-autosuggestions
  zsh-syntax-highlighting
  autojump
  docker-compose
  systemd
)

case $(tty) in
  (/dev/tty[1-9]) ZSH_THEME='clean';;
esac

autoload -U compinit && compinit
source $ZSH/oh-my-zsh.sh

#====== Other configuration

INJECTED=$HOME/custom/scripts
export PATH=$INJECTED:$PATH

alias wolmain="wakeonlan -p 9 -i 255.255.255.255 2c:4d:54:58:7b:5d"
alias wolgt70="wakeonlan -p 9 -i 255.255.255.255 8c:89:a5:0c:02:5d"

