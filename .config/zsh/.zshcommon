#====== ZSH

HISTSIZE=10000
SAVEHIST=10000
HISTFILE=$HOME/.cache/zsh/history

ZSH_THEME="robbyrussell"

ZSH_CUSTOM="$HOME/custom/zsh"

plugins=(
  git vi-mode
)

# Context
DEFAULT_USER=$USER

mkdir -p $HOME/.cache/zsh
touch $HISTFILE

#====== Other

# Vi mode with ESC
bindkey -v

# Use lf to switch directories and bind it to ctrl-o
lfcd () {
    tmp="$(mktemp)"
    lf -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
bindkey -s '^o' 'lfcd\n'

